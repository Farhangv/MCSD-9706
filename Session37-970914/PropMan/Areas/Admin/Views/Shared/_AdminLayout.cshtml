<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | مدیریت ملک جو</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/summernotecss")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("مدیریت ملک جو", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Admin/Home/Index"><span class="fa fa-home"></span></a></li>
                    <li>@Html.ActionLink("انواع ملک", "Index", "PropertyType")</li>
                    <li>@Html.ActionLink("مدیریت مناطق", "Index", "Locations")</li>
                    <li>@Html.ActionLink("مدیریت آگهی ها", "Index", "Properties")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ملک جو</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/summernotejs")
    @Scripts.Render("~/bundles/farsiToolkit")

    <script>
        $('.farsi-type').farsiInput();
    </script>

    <script>
        $(function () {
            $('.summernote').summernote();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
