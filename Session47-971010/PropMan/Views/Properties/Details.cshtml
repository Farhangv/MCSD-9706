@model PropMan.ViewModels.PropertyDetailsViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="row">
    <h2>@Model.Title</h2>
</div>
<div class="row">
    <div id="myCarousel" class="carousel slide col-md-8 col-md-offset-2" data-ride="carousel" style="margin-top:30px; margin-bottom:30px;">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @for (var i = 0; i < Model.MediaPaths.Count(); i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @for (var i = 0; i < Model.MediaPaths.Count(); i++)
            {
                <div class="item @(i == 0 ? "active" : "")">
                    <img src="@Model.MediaPaths.ToArray()[i]" alt="@Model.Title" style="max-height:400px;">
                </div>

            }

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>