@model IEnumerable<PropMan.Models.ApplicationUser>

@{
    ViewBag.Title = "لیست کاربران";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("افزودن", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-center">
            @if (!string.IsNullOrEmpty(item.PhotoFilePath))
            {
                <img class="user-thumbnail img-circle" src="/Photos/Users/@item.PhotoFilePath"/>
            }
            else {
                <img class="user-thumbnail img-circle" src="/Photos/person.jpg"/>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Family)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>

        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
            @Html.ActionLink("جزییات", "Details", new { id = item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
